# --- Telegram Bot (必須) ---
# ご自身のTelegram Botのトークンを設定
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
# 通知を送りたいTelegramチャンネルまたはご自身のチャットIDを設定
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID"


# --- 取引所API (自動売買に必須) ---
EXCHANGE_API_KEY="YOUR_EXCHANGE_API_KEY"
EXCHANGE_API_SECRET="YOUR_EXCHANGE_API_SECRET"
# 本番取引を行う場合は"False"に設定。テスト中は必ず"True"のままにしてください。
PAPER_TRADING_ENABLED="True"


# --- 外部APIキー (推奨) ---
# RenderでのIPブロック対策に利用
PROXY_URL=""
# オンチェーンデータ分析に利用
MORALIS_API_KEY="YOUR_MORALIS_API_KEY"


# --- AIモデル学習用 (Renderでの運用に必須) ---
# RenderでPostgreSQLを作成した際に取得したInternal Database URL
DATABASE_URL=""
# Render上で学習をトリガーするための秘密のパスワード
TRAIN_SECRET_KEY="your_super_secret_password"


